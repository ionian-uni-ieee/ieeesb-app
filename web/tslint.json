{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "arrow-return-shorthand": true,
        "no-console": false,
        "class-name": true,
        "curly": true,
        "await-promise": true,
        "deprecation": true,
        "eofline": true,
        "file-name-casing": [
            true,
            "camel-case",
            "pascal-case"
        ],
        "import-spacing": true,
        "indent": true,
        "interface-name": true,
        "linebreak-style": [
            true,
            "LF"
        ],
        "array-type": [
            true,
            "array-simple"
        ],
        "arrow-parens": true,
        "max-line-length": [
            true,
            128
        ],
        "no-any": false,
        "no-duplicate-imports": true,
        "no-var-keyword": true,
        "triple-equals": true,
        "whitespace": true,
        "variable-name": {
            "options": [
                "allow-pascal-case",
                "allow-snake-case",
                "ban-keywords",
                "allow-leading-underscore"
            ]
        },
        "use-isnan": true,
        "typeof-compare": true,
        "type-literal-delimiter": true,
        "quotemark": [
            true,
            "single"
        ],
        "typedef": true,
        "strict-type-predicates": true,
        "align": true
    },
    "rulesDirectory": []
}
